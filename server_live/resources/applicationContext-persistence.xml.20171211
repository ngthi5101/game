<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">
	<!-- DataSource configuration for Apache JDBC -->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
	    <property name="driverClassName" value="${connection.driver_class}"/>
	    <property name="url" value="${connection.url}"/>
	    <property name="username" value="${connection.username}"/>
	    <property name="password" value="${connection.password}"/>
	    <!--  Other DBCP properties -->
	    <property name="initialSize" value="2"/>
	    <property name="maxActive" value="100"/>
	    <property name="maxIdle" value="8"/>	    
	    <property name="minIdle" value="1"/>
	</bean>
	
	<!-- DataSource configuration for Tomcat JDBC -->
	<bean id="dataSource2" class="org.apache.tomcat.jdbc.pool.DataSource"
          p:driverClassName="${connection.driver_class}" p:url="${connection.url}"
          p:username="${connection.username}" p:password="${connection.password}"
          p:maxActive="100" p:initialSize="10" p:minIdle="10" p:maxWait="50" p:validationQuery="SELECT 1" 
	  p:testOnBorrow="true" p:validationInterval="30000" p:removeAbandoned="true"
          p:removeAbandonedTimeout="60" p:testWhileIdle="true" p:timeBetweenEvictionRunsMillis="300000" />

	<!-- DataSource configuration for DriverManagerDataSource JDBC -->
	<bean id="dataSource1" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${connection.driver_class}" />
		<property name="url" value="${connection.url}" />
		<property name="username" value="${connection.username}" />
		<property name="password" value="${connection.password}" />
	</bean>
	
	<!-- Hibernate session factory -->
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean" scope="singleton">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">${hibernate.dialect}</prop>
				<prop key="hibernate.show_sql">${show_sql}</prop>
			</props>
		</property>
		<property name="annotatedClasses">
			<list>
				<value>vn.yotel.yoker.domain.Application</value>
				<value>vn.yotel.yoker.domain.Game</value>
				<value>vn.yotel.yoker.domain.Zone</value>
				<value>vn.yotel.yoker.domain.RoomType</value>
				<value>vn.yotel.yoker.domain.Room</value>
				<value>vn.yotel.yoker.domain.SocialNetwork</value>
				<value>vn.yotel.yoker.domain.SocialUser</value>
				<value>vn.yotel.yoker.domain.User</value>
				<value>vn.yotel.yoker.domain.Session</value>
				<value>vn.yotel.yoker.domain.UserMessage</value>
				<value>vn.yotel.yoker.domain.UserFriend</value>
				<value>vn.yotel.yoker.domain.UserKoin</value>
				<value>vn.yotel.yoker.domain.UserKoinHistory</value>
				<value>vn.yotel.yoker.domain.UserExp</value>
				<value>vn.yotel.yoker.domain.UserExpHistory</value>
				<value>vn.yotel.yoker.domain.UserActionLog</value>
				<value>vn.yotel.yoker.domain.UserRewardClaim</value>
				<value>vn.yotel.yoker.domain.UserStats</value>
				<value>vn.yotel.yoker.domain.UserDevice</value>
				<value>vn.yotel.yoker.domain.SystemMessage</value>
				<value>vn.yotel.yoker.domain.Config</value>
				<value>vn.yotel.yoker.domain.GiftCode</value>
				<value>vn.yotel.yoker.domain.RequestSms</value>
				<value>vn.yotel.yoker.domain.ResponseSms</value>
				<value>vn.yotel.yoker.domain.RequestCard</value>
				<value>vn.yotel.yoker.domain.Match</value>
				<value>vn.yotel.yoker.domain.Permission</value>
				<value>vn.yotel.yoker.domain.Role</value>
				<value>vn.yotel.yoker.domain.AuthUser</value>
				<value>vn.yotel.yoker.domain.AffiliateUser</value>
				<value>vn.yotel.yoker.domain.AffiliateUserCp</value>
				<value>vn.yotel.yoker.domain.UserMeta</value>
				<value>vn.yotel.yoker.domain.Schedule</value>
				<value>vn.yotel.yoker.domain.ScheduleDetail</value>
				<value>vn.yotel.yoker.domain.UserFeedback</value>
				<value>vn.yotel.yoker.domain.Achievement</value>
				<value>vn.yotel.yoker.domain.DailyTask</value>
				<value>vn.yotel.yoker.domain.UserArch</value>
				<value>vn.yotel.yoker.domain.UserDaillyTask</value>
				<value>vn.yotel.yoker.domain.UserVip</value>
				<value>vn.yotel.yoker.domain.UserVipConfig</value>
				<value>vn.yotel.yoker.domain.RequestIap</value>
				<value>vn.yotel.yoker.domain.UserExpGlobal</value>
				<value>vn.yotel.yoker.domain.UserExpConfig</value>
				<value>vn.yotel.yoker.domain.UserGold</value>
				<value>vn.yotel.yoker.domain.UserGoldHistory</value>
				<value>vn.yotel.yoker.domain.CashoutRequest</value>
				<value>vn.yotel.yoker.domain.CashoutItem</value>
				<value>vn.yotel.yoker.domain.RoomHistory</value>
				<value>vn.yotel.yoker.domain.RoomUserHistory</value>
				<value>vn.yotel.yoker.domain.RoomTaixiuHistory</value>
				<value>vn.yotel.yoker.domain.CashoutSummary</value>
			</list>
		</property>
	</bean>
		<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<tx:annotation-driven transaction-manager="transactionManager" />
	<tx:annotation-driven />
</beans>